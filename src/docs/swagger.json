{
    "openapi":"3.0.0",
    "info":{
        "title": "Api para capturar dados de sites",
        "description": "Essa API tem a função principal de capturar dados referentes a notebooks em sites",
        "contact": {
            "email": "luiz.mendes@in8.com.br"
        },
        "version": "1.0.0"
    },
    "servers":[
        {
            "url":"http://localhost:9000/v1",
            "description": "dev api"
        }
    ],
    "paths":{
        "/user":{
            "post": {
                "summary": "Cadastro de usuário",
                "description": "Responsável por fazer o cadastro de um novo usuário",
                "tags": ["Users"],
                "requestBody": {
                    "content":{
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "examples": {
                                "user":{
                                    "value": {
                                        "nome":"Luiz Mendes",
                                        "email":"luiz.mendes@in8.com.br",
                                        "senha":"M1nh4$3nh4"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "User already exists",
                        "content":{
                        "application/json":{
                                "schema":{
                                    "$ref": "#/components/schemas/MessageClient"
                                },
                                "examples":{
                                    "messageClient":{
                                        "value": {
                                            "status":false,
                                            "message":"User already exists",
                                            "data":""
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "201":{
                        "description": "Successfully created",
                        "content":{
                        "application/json":{
                                "schema":{
                                    "$ref": "#/components/schemas/MessageClient"
                                },
                                "examples":{
                                    "messageClient":{
                                        "value": {
                                            "status":true,
                                            "message":"Successfully created",
                                            "data": {
                                                "User": {
                                                    "type": "object",
                                                    "properties":{
                                                        "id":{
                                                            "type":"number"
                                                        },
                                                        "nome":{
                                                            "type":"string"
                                                        },
                                                        "email":{
                                                            "type":"string"
                                                        },
                                                        "senha":{
                                                            "type":"string"
                                                        }
                                                    }
                                                }                                                
                                            }                                   
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/login": {
            "post": {
                "summary": "Login do usuário",
                "description ": "Responsável por autenticar o usuário e retornar seu token de acesso",
                "tags": ["Users"],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            },
                            "examples": {
                                "login": {
                                    "value": {
                                        "email":"luiz.mendes@in8.com.br",
                                        "senha":"M1nh4$3nh4"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200":{
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema": {
                                    "id":"number",
                                    "type":"object",
                                    "$ref":"#/components/schemas/Token"
                                }
                            }
                        }
                    },
                    "404":{
                        "description": "Login not found"
                    }
                }
            }
        },
        "/crawler": {
            "get":{
                "summary": "Captura informações",
                "decription": "Responsável por capturar informações de sites",
                "tags": ["Crawler"],
                "RequestBody": {
                },
                "responses":{
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type":"array",
                                    "items":{
                                        "$ref":"#/components/schemas/Notebook"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "data not found"
                    }
                    
                }
            }            
        },
        "/crawler/findById/{id}": {
            "get":{
                "summary": "Busca item",
                "description": "Responsável de buscar o item requisitado",
                "tags": ["Crawler"],
                "parameters":[
                    {
                        "name":"id",
                        "in": "path",
                        "description": "Id do notebook para busca",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": "object",
                                "$ref":"#/components/schemas/Notebook"
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            }
        },
        "/notebook": {
            "get": {
                "summary": "Busca todos os notebooks",
                "description": "Responsavel por buscar todos os notebooks cadastrados",
                "tags": ["Notebook"],
                "responses":{
                    "200":{
                        "description": "Found notebooks!",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref": "#/components/schemas/MessageClient"
                                }
                            }
                        }
                    },
                    "404":{
                        "description":"Notebook not found",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref": "#/components/schemas/MessageClient"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/notebook/{id}/remove": {
            "delete": {
                "sumary": "Remove um notebook",
                "description": "Responsável por remover um produto cadastrado",
                "tags":["Notebook"],
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "description":"notebook id to be deleted",
                        "required":true
                    }
                ],
                "responses":{
                    "200":{
                        "description": "Notebook deleted"
                    },
                    "404":{
                        "description": "Notebook not Found"
                    }
                }
            }
        },
        "/notebook/{id}": {
            "put": {
                "sumary":"Edita as informações de um notebook",
                "description":"Edita as informações de um notebook especifico",
                "tags": ["Notebook"],
                "parameters":[
                    {
                        "name":"id",
                        "in": "path",
                        "description": "Id do notebook para ser alterado",
                        "required": true
                    }
                ],
                "requestBody":{
                    "content":{
                        "application/json": {
                            "schema": {                                
                                "schema": "object",
                                "$ref":"#/components/schemas/Notebook" 
                            },
                            "examples":{
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description": "Updated"
                    },
                    "404":{
                        "description":"Notebook not found"
                    }
                }

            }
        },
        "/order": {
            "post":{
                "summary": "Adicionar pedido",
                "description": "Adiciona uma lista de produtos escolhidos pelo usuário",
                "tags": ["Order"],
                "requestBody":{
                    "content":{
                        "application/json": {
                            "schema": {
                                "type":"object",
                                "properties":{
                                    "idUser":{
                                        "type":"number"
                                    },
                                    "notebooks":{
                                        "type":"array",
                                        "items":{
                                            "type":"number"
                                        }
                                    }                                   
                                }   
                            },
                            "examples":{
                                "order":{
                                    "value":{
                                        "idUser":4,
                                        "notebooks":[
                                            {
                                                "id":21,
                                                "quantity":34
                                            },
                                            {
                                                "id":2,
                                                "quantity":32
                                            },
                                            {
                                                "id":508,
                                                "quantity":30
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Created"
                    },
                    "404":{
                        "description":"Notebook not found"
                    }
                }

            }
        }
    },
    "components":{
        "schemas":{
            "User": {
                "type": "object",
                "properties":{
                    "id":{
                        "type":"number"
                    },
                    "nome":{
                        "type":"string"
                    },
                    "email":{
                        "type":"string"
                    },
                    "senha":{
                        "type":"string"
                    }
                }
            },
            "Login": {
                "type":"object",
                "properties":{
                    "email": {
                        "type":"string"
                    },
                    "senha":{
                        "type":"string"
                    }
                }
            },
            "Token": {
                "type":"object",
                "properties": {
                    "token": {
                        "type": "string"
                    }
                }
            },
            "Notebook": {
                "type":"object",
                "properties": {
                    "id":{
                        "type": "number"
                    },
                    "description":{
                        "type": "string"
                    },
                    "img": {
                        "type":"string"
                    },
                    "model": {
                        "type": "string"
                    },
                    "price": {
                        "type":"number"
                    },
                    "ratting":{
                        "type": "string"
                    },
                    "idNotebook":{
                        "type":"number"
                    },
                    "linkDetails":{
                        "type":"string"
                    }
                    
                }
            },
            "MessageClient": {
                "type":"object",
                "properties":{
                    "status":{
                        "type":"boolean"
                    },
                    "message":{
                        "type":"string"
                    },
                    "data":{
                        "type":"object"                        
                    }
                }
            }
        }
    }
}